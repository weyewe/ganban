

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:id => "com-login"}) do |f| %>
  <p class="dissolve">
    <%= f.email_field :email , :style => "height: 20px;font-style: italic;width:350px;height: 25px;",
        :title => "Masukan username/email kamu disini", 
        :class => "text" , :onmouseout => "if(this.value==''){this.value='Username / email'}" ,
        :onclick => "this.value=''"   %>
  </p>

  <p class="dissolve">
    <%= f.password_field :password , :class => "text", :title => "Masukkan Password kamu disini" ,
        :style => "height: 20px;font-style: italic;width:350px;height: 25px;" ,
        :onkeypress => "return submitenter(this,event)"%>
  </p>

  <% if devise_mapping.rememberable? -%>
    <p class="check">
      <%= f.check_box :remember_me , :onfocus => "this.checked='checked'"%> 
      <strong>Ingat aku!</strong> (jangan dicentang jika memakai komputer publik)
    </p>
  <% end -%>
  
  <p id="bukaforgot" class="check"><span>&nbsp;&nbsp;</span><span><a onclick="forgotpassf();return false;" href="#">Forgot Password</a></span></p>
  

<% end %>

